# Fase de construcci칩n
FROM node:14 AS build

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

# Fase de ejecuci칩n
FROM nginx:alpine

# Suponiendo que la salida de la construcci칩n est치 en el directorio "dist"
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
